<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- Framework alvo do jogo -->
		<TargetFramework>net472</TargetFramework>

		<!-- Build 64 bits e otimizações -->
		<Platforms>x64</Platforms>
		<PlatformTarget>x64</PlatformTarget>
		<Optimize>true</Optimize>
		<LangVersion>latest</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>

		<!-- Caminho de saída -->
		<OutputPath>bin\Win64_Shipping_Client\</OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

		<!-- Caminho base do jogo -->
		<BannerlordPath Condition=" '$(BannerlordPath)' == '' ">
			C:\Program Files (x86)\Steam\steamapps\common\Mount &amp; Blade II Bannerlord
		</BannerlordPath>
	</PropertyGroup>

	<ItemGroup>
		<!-- ===================================================== -->
		<!-- 🧩 REFERÊNCIAS NÚCLEO DO BANNERLORD -->
		<!-- ===================================================== -->
